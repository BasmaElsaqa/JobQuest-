<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Page Header -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/track_page_header"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/header_stroke"
        android:elevation="2dp"
        android:paddingHorizontal="5dp"
        >

        <TextView
            android:id="@+id/applying_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply for Position"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Job Details Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Software Developer at TechCorp Inc."
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TechCorp Inc."
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: New York | Salary: $80,000/year"
                    android:textSize="12sp"
                    android:textColor="#88B428"
                    android:layout_marginBottom="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full-time"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="#88B428"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="6dp"
                    android:layout_gravity="start"
                    android:backgroundTint="#88B428"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Resume Upload Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Your Resume"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- Resume Upload Box -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:strokeColor="#CCCCCC"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/upload_resume_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Drag and Drop or Browse"
                    android:textColor="#000000"
                    android:padding="12dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Cover Letter -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cover Letter"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeColor="#CCCCCC"
                app:strokeWidth="1dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="10dp"
                android:padding="12dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Write a personalized cover letter for your application."
                    android:textSize="15dp"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:background="@android:color/transparent"
                    android:padding="10dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Application"
                android:textColor="#FFFFFF"
                android:backgroundTint="#000000"
                app:cornerRadius="12dp"
                android:padding="14dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_for_later_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save for later"
                android:textColor="#000000"
                android:backgroundTint="#F3F4F6"
                app:cornerRadius="12dp"
                android:padding="14dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#000000"
                android:backgroundTint="#F3F4F6"
                app:cornerRadius="12dp"
                android:padding="14dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>